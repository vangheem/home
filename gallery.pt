<div id="grid-gallery-${name}" class="grid-gallery">
  <section class="grid-wrap">
    <ul class="grid">
      <li class="grid-sizer"></li><!-- for Masonry column width -->
      <tal:images tal:repeat="image images">
        <li>
          <figure>
            <img src="${image['thumb']}" />
          </figure>
        </li>
      </tal:images>
      <!-- <li>
        <figure>
          <img src="libs/grid-gallery/img/thumb/2.png" alt="img02"/>
